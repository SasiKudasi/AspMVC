@using AspNetMVCProject
@using AspNetMVCProject.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model List<AspNetMVCProject.Contracts.BookResponce>

<!DOCTYPE html>
<html>
<head>
    <title>Books</title>
</head>
<body>
    <h1>Books List</h1>

    @if (Model != null && Model.Any())
    {
    <table>
        <thead>
            <tr>
                <th>Название</th>
                <th>Описание</th>
                <th>Цена</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
                {
            <tr>
                <td>@book.Title</td>
                <td>@book.Description</td>
                <td>@book.Price.ToString() $ </td> <!-- Форматирование цены как валюты -->
            </tr>
                }
        </tbody>
    </table>
    }
    else
    {
    <p>Пусто :(</p>
    }
    <br />
    <label>Для того что бы добавить книгу заполните форму ниже:</label>
    <br />
    <form asp-action="CreateBook" method="post">
        <div>
            <label for="Title">Название книги:</label>
            <input type="text" id="Title" name="Title" required />
        </div>
        <div>
            <label for="Description">Описание книги:</label>
            <input type="text" id="Description" name="Description" required />
        </div>
        <div>
            <label for="Price">Цена:</label>
            <input type="number" id="Price" name="Price" step="0.01" required />
        </div>
        <button type="submit">Add Book</button>
    </form>
</body>
</html>




